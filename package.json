{
  "name": "ai-persona-electron-nuxt3",
  "author": "parsehex",
  "email": "",
  "description": "Talk to AI-powered personas that you can customize.",
  "version": "1.0.0",
  "private": true,
  "main": ".output/electron/background.js",
  "scripts": {
    "dev": "nuxt dev -o",
    "build": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && electron-builder install-app-deps",
    "transpile-electron": "tsc -p ./electron --outDir .output/electron",
    "dev:electron": "NODE_ENV=development concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess 'electron ./.output/electron/background.js'\"",
    "dev:electron:win": "set NODE_ENV=development& concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess scripts/windows/run.electron\"",
    "build:electron": "npm run build && npm run transpile-electron && node build.js",
    "llamacpp:linux": "./scripts/linux/start_llamacpp_server.sh",
    "llamacpp:win": "scripts/windows/start_llamacpp_server.ps1",
    "whispercpp:linux": "./scripts/linux/start_whispercpp_server.sh",
    "whispercpp:win": "scripts/windows/start_whispercpp_server.ps1"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/express": "^4.17.17",
    "concurrently": "^8.0.1",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nuxt": "^3.3.3",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@nuxtjs/i18n": "^8.3.0",
    "@pinia/nuxt": "^0.4.7",
    "electron-log": "^5.0.0-beta.16",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2"
  }
}
